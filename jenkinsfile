pipeline {
    agent any
    environment {
        test = 'hello'
        test1 = 'world'
    }
    stages {
        stage ('first') {
            agent { 
                docker {
                    image 'maven:3.8.1-adoptopenjdk-11'
                    label 'my-defined-label'
                    args  '-v /tmp:/tmp'
                }
            }
            steps{
                sh "git fetch https://github.com/vkrishna77/workplace-local.git"
                sh "java -version"    
            }
        }
        stage ('second') {
            steps{
                sh "echo ${test}"
                sh "echo ${test1}"
            }
        }    
        
    }
}