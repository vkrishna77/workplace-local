pipeline {
    agent any
    environment {
        test = 'hello'
        test1 = 'world'
    }
    stages {
        stage ('first') {
            agent { 
                docker { image 'jenkins/agent:alpine-jdk11' }
            }
            steps{
                sh "git fetch https://github.com/vkrishna77/workplace-local.git"
                sh "java -version"    
            }
        }
        stage ('second') {
            steps{
                sh "echo ${test}"
                sh "echo ${test1}"
            }
        }    
        
    }
}