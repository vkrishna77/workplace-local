pipeline {
    agent any
    environment {
        test = 'hello'
        test1 = 'world'
    }
    stages {
        stage ('first') {
            agent { label 'docker-1'  }
            steps{
                sh "git fetch https://github.com/vkrishna77/workplace-local.git"
                sh "java -version"
                sh "javac helloworld.java"
                sh "java helloworld"
            }
        }
        stage ('second') {
            steps{
                sh "echo ${test}"
                sh "echo ${test1}"
            }
        }    
        stage ('third') {
            agent { label 'docker-python'  }
            steps{
                sh "git fetch https://github.com/vkrishna77/workplace-local.git"
                sh "python test.py"
            }
        }
        
    }
}