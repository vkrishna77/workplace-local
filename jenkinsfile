pipeline {
    agent any
    environment {
        test = 'hello'
        test1 = 'world'
    }
    stages {
        stage ('first') {
            agent { label "azureagentssh" }
            steps{
                sh "java -version"
                sh "javac helloworld.java"
                sh "java helloworld"
            }
        }
        stage ('second') {
            agent { label "azureagentssh" }
            steps{
                sh "echo ${test}"
                sh "echo ${test1}"
            }
        }    
        stage ('third') {
            steps{
                sh "echo hello"
                sh "echo hello1"
            }
        }
        
    }
}