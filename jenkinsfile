pipeline {
    agent any
    environment {
        test = 'hello'
        test1 = 'world'
    }
    stages {
        stage ('first') {
            
            steps{
                bat "git fetch https://github.com/vkrishna77/workplace-local.git"
                bat "java -version"
                bat "javac helloworld.java"
                bat "java helloworld"
            }
        }
        stage ('second') {
            steps{
                bat "echo ${test}"
                bat "echo ${test1}"
            }
        }    
        stage ('third') {
            steps{
                bat "git fetch https://github.com/vkrishna77/workplace-local.git"
                bat "python test.py"
            }
        }
        
    }
}